                                                <input type="checkbox" id="three">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="four">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="five">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="six">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="seven">
                                            </div>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="time">Chiều</td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="eight">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="nine">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="ten">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="eleven">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="twelve">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="thirdteen">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="fourteen">
                                            </div>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="time">Tối</td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="fifteen">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="sixteen">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="seventeen">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="eightteen">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="nineteen">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="twenty">
                                            </div>
                                        </td>
                                        <td>
                                            <div class="check-container">
                                                <input type="checkbox" id="twentyone">
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- Person Availability / End -->
                        <br />

                        <!--Lương-->
                        <fieldset>
                            <label>Lương(Theo giờ)</label>
                            <div class="field">
                                <input type="number" min="10000" placeholder="VND/Giờ" class="form-control" name="salary" id="salary" value="@Html.DisplayFor(model => item.SalaryPerHour) " />
                            </div>
                        </fieldset>
                        <br />
                        <!-- experience -->
                        <fieldset class="fieldset-experience">
                            <label for="salary">Kinh nghiệm</label>
                            <div class="field select-style">
                                <select name="experience" id="experience" class="form-control" value="@Html.DisplayFor(model => item.YearsOfExperience)">
                                    @*<option value="0">@Html.DisplayFor(model => item.YearsOfExperience)</option>*@
                                    <option value="under 1"> dưới 1 năm</option>
                                    <option value="over 1">> 1 năm</option>
                                    <option value="over 2">> 2 năm</option>
                                    <option value="over 3">3 năm</option>
                                    <option value="over 4">4 năm</option>
                                    <option value="over 5">5 năm</option>
                                    <option value="over 6">6 năm</option>
                                    <option value="over 7">7 năm</option>
                                    <option value="over 8">8 năm</option>
                                    <option value="over 9">9 năm</option>
                                    <option value="over 10">10 năm</option>
                                    <option value="over 11">11 năm</option>
                                </select>
                            </div>
                        </fieldset>
                        <br />
                    }
                        <!--Co kha nang trong-->
                        <fieldset>
                            <label>Có khả năng trông</label>
                            <div class="btn-group btn-group-toggle d-flex flex-column flex-md-row" data-toggle="buttons">
                                <div style="padding-right:0.5em;">
                                    <label class="btn btn-outline-success">
                                        <input type="checkbox" autocomplete="off" style="display:none;"> Trẻ sơ sinh
                                    </label>
                                </div>
                                <div style="padding-right: 0.5em;">
                                    <label class="btn btn-outline-success">
                                        <input type="checkbox" autocomplete="off" style="display:none;"> 1-2 tuổi
                                    </label>
                                </div>
                                <div style="padding-right: 0.5em;">
                                    <label class="btn btn-outline-success">
                                        <input type="checkbox" autocomplete="off" style="display:none;"> Trẻ mầm non
                                    </label>
                                </div>
                                <div style="padding-right: 0.5em;">
                                    <label class="btn btn-outline-success">
                                        <input type="checkbox" autocomplete="off" style="display:none;"> Tiểu học
                                    </label>
                                </div>
                                <div style="padding-right: 0.5em;">
                                    <label class="btn btn-outline-success">
                                        <input type="checkbox" autocomplete="off" style="display:none;"> Trung học
                                    </label>
                                </div>
                            </div>
                        </fieldset>
                        <br />
                        <!--Skills-->
                        <fieldset>
                            <label>Kỹ năng</label>
                            <div class="btn-group btn-group-toggle d-flex flex-column flex-md-row" data-toggle="buttons">
                                <div style="padding-right:0.5em;">
                                    <label class="btn btn-outline-success">
                                        <input type="checkbox" autocomplete="off" style="display:none;"> Kỹ năng 1
                                    </label>
                                </div>
                                <div style="padding-right: 0.5em;">
                                    <label class="btn btn-outline-success">
                                        <input type="checkbox" autocomplete="off" style="display:none;"> Kỹ năng 2
                                    </label>
                                </div>
                                <div style="padding-right: 0.5em;">
                                    <label class="btn btn-outline-success">
                                        <input type="checkbox" autocomplete="off" style="display:none;"> Kỹ năng 3
                                    </label>
                                </div>
                                <div style="padding-right: 0.5em;">
                                    <label class="btn btn-outline-success">
                                        <input type="checkbox" autocomplete="off" style="display:none;"> Kỹ năng 4
                                    </label>
                                </div>
                                <div style="padding-right: 0.5em;">
                                    <label class="btn btn-outline-success">
                                        <input type="checkbox" autocomplete="off" style="display:none;"> Kỹ năng 5
                                    </label>
                                </div>
                            </div>
                        </fieldset>
                        <br />

                        <input type="submit" name="save_profile" class="btn btn-success" value="Lưu" />



                        <!-- Profile Form / End -->
                    </div>
            </div>

        </div>
</section>