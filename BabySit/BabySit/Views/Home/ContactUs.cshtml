@{
    ViewData["Title"] = "Liên hệ";
}
<div class="main" role="main" style="padding-top:10em;">
    <h1 class="text-center">Liên hệ</h1>
    <!-- Page Content -->
    <section class="page-content">

        <div class="container">

            <div class="row">
                <div class="col-md-4">
                    <!-- Contacts Info -->
                    <div class="card navbar-shadow">
                        <div class="card-body">
                            <h3 class="card-title text-center">Thông tin liên hệ</h3>
                            <div class="widget-content">
                                <ul class="contacts-info-list">
                                    <li>
                                        <i class="fa fa-map-marker"></i> Số 130 Phương Liệt, Thanh Xuân, Hà Nội
                                    </li>
                                    <li>
                                        <i class="fa fa-phone"></i> 038-609-2456
                                    </li>
                                    <li>
                                        <i class="far fa-envelope"></i><a href="mailto:hakanai2020@gmail.com"> hakanai2020@gmail.com</a>
                                    </li>
                                    <li>
                                        <i class="far fa-clock"></i> Thứ Hai - Thứ Sáu 9:00 - 21:00
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- /Widget :: Contacts Info -->
                </div>
                <div class="col-md-8">
                    <h2>Gửi tin nhắn</h2>
                    <form action="#" id="contact-form">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label>Họ và Tên <span class="required">*</span></label>
                                    <input type="text"
                                           value=""                                           
                                           class="form-control"
                                           name="name" id="name">
                                </div>
                                <div class="form-group">
                                    <label>Email <span class="required">*</span></label>
                                    <input type="email"
                                           value=""
                                           class="form-control"
                                           name="email"
                                           id="email">
                                </div>
                                <div class="form-group">
                                    <label>Chủ đề</label>
                                    <input type="text"
                                           value=""
                                           class="form-control"
                                           name="subject"
                                           id="subject">
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="form-group">
                                    <label>Tin nhắn <span class="required">*</span></label>
                                    <textarea rows="11"
                                              class="form-control"
                                              name="message"
                                              id="message"></textarea>                                              
                                </div>
                            </div>
                        </div>
                        <div class="text-right">
                            <input type="submit" value="Gửi tin nhắn" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </section>
    <!-- Page Content / End -->
</div>